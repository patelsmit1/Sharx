<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-30 p-r-30 p-t-20 p-b-20">
            <form class="login100-form validate-form flex-sb flex-w" action="Login" method="post">
                <span class="login100-form-title p-b-40">

                    View Details
                </span>
                <div id="img-container" style=" width: 100%;height: max-content;display: flex;justify-content: center;">
                    <div id="img">
                        <img src="@imagepath">
                    </div>
                </div>

                <div class="p-t-25 p-b-9">
                    <span style="font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        File Name  -: @filename
                    </span>
                </div>

                <div class="p-t-25 p-b-9" style="display:block!important">
                    <span style="display:block!important;font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        Length  -: @l  MB
                    </span>
                </div>


                <div class="p-t-25 p-b-9" style="display:block!important">
                    <span style="display:block!important;font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        Extension  -: @ext
                    </span>
                </div>

                <div class="p-t-25 p-b-9" style="display:block!important">
                    <span style="display:block!important;font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        Last Modified Time  -: @dt
                    </span>
                </div>
                <div class="p-t-25 p-b-9" style="display:block!important">
                    <span style="display:block!important;font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        Creation Time -: @ut
                    </span>
                </div>
                <div class="p-t-25 p-b-9" style="display:block!important">
                    <span style="display:block!important;font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        User  -: @user
                    </span>
                </div>



            </form>
        </div>
    </div>
</div>


