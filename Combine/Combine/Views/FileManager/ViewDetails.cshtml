
@{
    ViewBag.Title = "ViewDetails";
    var filename = ViewBag.filename;
    var l = ViewBag.l;
    var ext = ViewBag.ext;
    var showpath = ViewBag.showpath;
    var dt = ViewBag.dt;
    var ut = ViewBag.ut;
    var user = ViewBag.user;
    var imagepath = "";
    switch (ext)
    {
        case ".pdf":
            imagepath = "/Content/pdf.png";
            break;
        case ".ppt":
            imagepath = "/Content/ppt.png";
            break;
        case ".docx":
        case ".doc":
            imagepath = "/Content/word.png";
            break;
        case ".zip":
            imagepath = "/Content/zip.png";
            break;
        case ".mp4":
            imagepath = "/Content/video.png";
            break;
        case ".xlsx":
        case ".xls":
            imagepath = "/Content/excel.png";
            break;

        default:
            imagepath = "/Content/file.png";
            break;

    }
}
