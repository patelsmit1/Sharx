<h2>Share Url  </h2>

<div id="urlarea" class="wrap-input100 validate-input" data-validate="First Name is required">
    <input class="input100" type="text" id="url" value="@ViewBag.url" readonly>
    <span class="focus-input100"></span>
</div>
<button style="color:white!important" class="btn-outline-success rounded-pill" id="clipboard" onclick="myFunction()">Copy to Clipboard</button>
<script>
    function myFunction() {
        var copyText = document.getElementById("url");
        copyText.select();
        copyText.setSelectionRange(0, 99999)
        document.execCommand("copy");
        alert("Copied the Link to clipboard: " + copyText.value);
    }
</script>