
@{
    var plan = ViewBag.plans;
    var user = ViewBag.user;
    ViewBag.Title = "GetPlan";

    int index = 1;
}





<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-30 p-r-30 p-t-20 p-b-20" style="width:70%!important">
            <form class="login100-form validate-form flex-sb flex-w" action="Login" method="post">
                <span class="login100-form-title p-b-40">


                </span>
                <div id="img-container" style=" width: 100%;height: max-content;display: flex;justify-content: center;">
                    <div id="img">
                        <img src="~/Content/user.png" style="width:150px;height:150px">
                    </div>
                </div>
                <hr style="clear:both!important">

                <div class="p-t-25 p-b-9">
                    <span style="font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        UserName : @user.username
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <input class="input100" type="text" name="username" style="display:none">
                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-25 p-b-9">
                    <span style="font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        Email : @user.email
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <input class="input100" type="text" name="username" style="display:none">
                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-25 p-b-9">
                    <span style="font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        Name : @user.fname @user.lname
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <input class="input100" type="text" name="username" style="display:none">
                    <span class="focus-input100"></span>
                </div>

                


                <hr style="clear:both!important">
                <h3>Plan Details</h3>
                <table class="table table-hover table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Subscription Date</th>
                            <th scope="col">Expiry Date</th>
                            <th scope="col">Storage Remaining(GB)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in plan)
                        {

                            <tr>
                                <th scope="row">@index</th>
                                <td>@item.subTime</td>
                                <td>@item.expiryTime</td>
                                <td>@(item.storageRemaining / 1048576)</td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>

            </form>
        </div>
    </div>
</div>

    

