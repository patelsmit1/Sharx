
@{
    ViewBag.Title = "forgotpassword";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-30 p-r-30 p-t-20 p-b-20">
            <form class="login100-form validate-form flex-sb flex-w" action="/SendOTP" method="get">
                <span class="login100-form-title p-b-40">

                    Forgot Password
                </span>

                <div class="p-t-25 p-b-9">
                    <span style="font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                       Enter Your Username:
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <input class="input100" type="text" name="uname">
                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn m-t-25">
                    <button class="login100-form-btn" type="submit">
                         Send OTP on Email ID
                    </button>
                </div>

               
            </form>
        </div>
    </div>
</div>


