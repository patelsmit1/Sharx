@model Combine.Models.UserModel

@{
    ViewBag.Title = "Index";
}


<div class="limiter">
    <div class="container-login100" style="background-image: url('images/bg-05.jpg');">
        <div class="wrap-login100 p-l-30 p-r-30 p-t-20 p-b-20">
            <form class="login100-form validate-form flex-sb flex-w" action="Register" method="post">
                <span class="login100-form-title p-b-35">


                    <br>
                    Sign Up
                </span>


                @if (TempData["status"] != null)

                {@TempData["status"]; }
                <div class="p-t-25 p-b-9">
                    <span style="font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        Username
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <input class="input100" type="text" name="username" required>
                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-25 p-b-9">
                    <span style="font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        E-mail
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Email is required">
                    <input class="input100" type="email" name="email" required>
                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-25 p-b-9">
                    <span style="font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        First Name
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="First Name is required">
                    <input class="input100" type="text" name="fname" required>
                    <span class="focus-input100"></span>
                </div>
                <div class="p-t-25 p-b-9">
                    <span style="font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        Last Name
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Last Name  is required">
                    <input class="input100" type="text" name="lname" required>
                    <span class="focus-input100"></span>
                </div>
                <div class="p-t-25 p-b-9">
                    <span style="font-size:20px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                        Date of Birth
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Last Name  is required">
                    <input class="input100" type="date" name="dob" id="datetimepicker9" required>
                    <span class="focus-input100"></span>
                </div>
                <div class="p-t-25 p-b-9">
                    <span class="txt1">
                        Password(6-20 characters)
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input class="input100" type="password" name="password" required>
                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-25 p-b-9">
                    <span class="txt1">
                        Password(again)
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input class="input100" type="password" name="cpass" required>
                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn m-t-30">
                    <button class="login100-form-btn">
                        Sign up
                    </button>
                </div>

                <div class="w-full text-center p-t-40">
                    <span class="txt2">
                        already a member?
                    </span>

                    <a href="#" class="txt2 bo1">
                        Sign in now
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>




<script type="text/javascript">
        $(function () {
            $('#datetimepicker9').datetimepicker({
                    viewMode: 'years'
            });
        });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
